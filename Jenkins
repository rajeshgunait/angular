pipeline{
    agent any
    stages{
        stage("build"){
            steps{
                echo 'testing the appln..'
            }
        }
        stage("test"){
            steps{
            echo 'testing the appln..'}

        }
          stage("deploy"){
            steps{
                echo 'deploying the appln..'
            }
        }
        stage("release"){
            steps{
            echo 'releasing the appln..'}

        }
    }
    post{
        always{
            emailext body: 'Summary',subject: 'Pipeline Status',to: 'rajeshgunait@gmail.com'
}
        
    } 
    
}
